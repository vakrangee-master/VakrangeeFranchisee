<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        app:cardElevation="2dp"
        app:contentPadding="5dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="false"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollbarSize="2dp"
            android:scrollbarThumbVertical="@color/colorPrimary"
            android:scrollbars="vertical">

            <!-- Simcard Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_stroke"
                android:orientation="vertical">

                <!-- simcard Details Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorLightPrimary"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="left"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="SIM CARD DETAILS"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                </LinearLayout>


                <!-- Simcard details provider -->
                <LinearLayout
                    android:id="@+id/layoutSimcardDetails"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/layoutSimcard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Simcard provider-->
                        <LinearLayout
                            android:id="@+id/layoutSimcardProvider"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="left"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txtSimcardProviderLbl"
                                        style="@style/bca_form_header"
                                        android:layout_weight="0.6"
                                        android:text="Provider" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="5dp"
                                    android:orientation="vertical">

                                    <in.vakrangee.supercore.franchisee.utils.CustomSearchableSpinner
                                        android:id="@+id/spinnerSimcardProvider"
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:background="@drawable/gradient_white_spinner"
                                        android:dropDownWidth="match_parent"
                                        android:fontFamily="sans-serif-condensed"
                                        android:gravity="center"
                                        android:spinnerMode="dropdown"
                                        android:textColor="@color/headline_lbl"
                                        android:textSize="12sp"
                                        android:textStyle="normal" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                        <!-- getATM service list-->

                        <LinearLayout
                            android:id="@+id/layoutATMSimcardProvider"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="left"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txtATMServiceLbl"
                                        style="@style/bca_form_header"
                                        android:layout_weight="0.6"
                                        android:text="ATM ID" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="5dp"
                                    android:orientation="vertical">

                                    <in.vakrangee.supercore.franchisee.utils.CustomSearchableSpinner
                                        android:id="@+id/spinnerATMServiceProvider"
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:background="@drawable/gradient_white_spinner"
                                        android:dropDownWidth="match_parent"
                                        android:fontFamily="sans-serif-condensed"
                                        android:gravity="center"
                                        android:spinnerMode="dropdown"
                                        android:textColor="@color/headline_lbl"
                                        android:textSize="12sp"
                                        android:textStyle="normal" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                        <!--  ATM ID base on Data  Visble or not -->
                        <LinearLayout
                            android:id="@+id/layoutATMData"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">
                            <!-- simcard number details-->
                            <LinearLayout
                                android:id="@+id/layoutSimcardNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="left"
                                android:orientation="vertical"
                                android:weightSum="1">

                                <TextView
                                    android:id="@+id/txtSimcardNumberLbl"
                                    style="@style/bca_form_header"
                                    android:layout_weight="0.6"
                                    android:text="SIM Number (20 characters) " />

                                <EditText
                                    android:id="@+id/editTextSimcardNumber"
                                    style="@style/bca_form_normal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="left"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/edittext_bottom_bg"
                                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
                                    android:gravity="top"
                                    android:hint="Enter 20 character SIM number"
                                    android:inputType="textCapCharacters"
                                    android:maxLength="20"
                                    android:padding="10dp"
                                    android:singleLine="true" />

                            </LinearLayout>


                            <!-- Simcard IMSI  number -->
                            <LinearLayout
                                android:id="@+id/layoutSimcardIMSINumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="left"
                                android:orientation="vertical"
                                android:weightSum="1">

                                <TextView
                                    android:id="@+id/txtSimcardIMSINumberLbl"
                                    style="@style/bca_form_header"
                                    android:layout_weight="0.6"
                                    android:text="SIM IMSI Number (15 digits) " />

                                <EditText
                                    android:id="@+id/editTextSimcardIMSINumber"
                                    style="@style/bca_form_normal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="left"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/edittext_bottom_bg"
                                    android:gravity="top"
                                    android:hint="Enter 15 digits IMSI number"
                                    android:inputType="number"
                                    android:maxLength="15"
                                    android:padding="10dp"
                                    android:singleLine="true" />

                            </LinearLayout>

                            <!-- simcard pic-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/edittext_bottom_bg"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/colorLightPrimary"
                                    android:orientation="horizontal"
                                    android:padding="5dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:padding="5dp">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="Cover Photo"
                                            android:textColor="@color/white" />
                                    </LinearLayout>

                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/white" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:padding="5dp">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="SIM Card Photo"
                                            android:textColor="@color/white" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="1"
                                    android:background="@color/white"
                                    android:orientation="horizontal"
                                    android:padding="5dp">

                                    <!-- Simcard Cover photo -->
                                    <LinearLayout
                                        android:id="@+id/layoutSimcardCover"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="5dp">

                                        <TextView
                                            android:id="@+id/txtSimcardCoverLbl"
                                            style="@style/bca_form_header"
                                            android:layout_weight="0.6"
                                            android:gravity="center"
                                            android:text="COVER PHOTO"
                                            android:textStyle="normal"
                                            android:visibility="gone" />


                                        <ImageView
                                            android:id="@+id/imgSimcardCover"
                                            android:layout_width="80dp"
                                            android:layout_height="80dp"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/ic_camera_alt_black_72dp" />

                                    </LinearLayout>

                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/grey" />

                                    <!--  simcard photo-->
                                    <LinearLayout
                                        android:id="@+id/layoutSimcardPhoto"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="5dp">

                                        <TextView
                                            android:id="@+id/txtSimcardPhotoLbl"
                                            style="@style/bca_form_header"
                                            android:layout_weight="0.6"
                                            android:gravity="center"
                                            android:text="SIMCARD PHOTO"
                                            android:visibility="gone" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:textColor="@color/gray" />

                                        <ImageView
                                            android:id="@+id/imgSimcardPhoto"
                                            android:layout_width="80dp"
                                            android:layout_height="80dp"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/ic_camera_alt_black_72dp" />

                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                            <!-- scan qr code-->
                            <LinearLayout
                                android:id="@+id/layoutSimcardScan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_bottom_bg"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@color/colorLightPrimary"
                                    android:orientation="horizontal"
                                    android:padding="5dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="Scan QR code"
                                        android:textColor="@color/white" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/txtlayoutSimcardScanLbl"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/simcardDetails_note"
                                    android:textColor="@color/headline_lbl" />

                                <TextView
                                    android:id="@+id/imgSimcardCoverScan"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:scaleType="fitXY"
                                    android:visibility="visible" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</LinearLayout>