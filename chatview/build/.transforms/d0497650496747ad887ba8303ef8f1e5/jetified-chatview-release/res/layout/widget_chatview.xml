<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootRL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chatRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/sendLL"
            android:background="@android:color/transparent">

        </androidx.recyclerview.widget.RecyclerView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/sendLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/swipeContainer"
        android:background="@android:color/transparent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="24dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:id="@+id/moreLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="60dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <!-- Category -->
                        <com.balysv.materialripple.MaterialRippleLayout
                            android:id="@+id/categoryMRL"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:minHeight="45dp"
                            android:minWidth="40dp"
                            android:paddingLeft="10dp"
                            android:visibility="visible"
                            app:mrl_rippleOverlay="true"
                            app:mrl_rippleRoundedCorners="30dp">

                            <Spinner
                                android:id="@+id/spinnerCategory"
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:layout_gravity="center"
                                android:background="@drawable/gradient_spinner"
                                android:dropDownWidth="match_parent"
                                android:gravity="center"
                                android:spinnerMode="dropdown"
                                android:textColor="#808080"
                                android:textSize="12sp" />

                        </com.balysv.materialripple.MaterialRippleLayout>

                        <!-- Sub Category -->
                        <com.balysv.materialripple.MaterialRippleLayout
                            android:id="@+id/subCategoryMRL"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:minHeight="50dp"
                            android:minWidth="40dp"
                            android:paddingLeft="10dp"
                            android:visibility="visible"
                            app:mrl_rippleOverlay="true"
                            app:mrl_rippleRoundedCorners="30dp">

                            <Spinner
                                android:id="@+id/spinnerSubCategory"
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="2dp"
                                android:background="@drawable/gradient_spinner"
                                android:dropDownWidth="match_parent"
                                android:gravity="center"
                                android:spinnerMode="dropdown"
                                android:textColor="#808080"
                                android:textSize="12sp" />

                        </com.balysv.materialripple.MaterialRippleLayout>

                        <!-- Location -->
                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:minHeight="40dp"
                            android:minWidth="40dp"
                            android:visibility="gone"
                            app:mrl_rippleOverlay="true"
                            app:mrl_rippleRoundedCorners="30dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="4dp"
                                android:src="@drawable/location_icon"
                                android:tint="@color/colorAccent" />
                        </com.balysv.materialripple.MaterialRippleLayout>

                        <!-- Gallery -->
                        <com.balysv.materialripple.MaterialRippleLayout
                            android:id="@+id/galleryMRL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:minHeight="40dp"
                            android:minWidth="40dp"
                            app:mrl_rippleOverlay="true"
                            app:mrl_rippleRoundedCorners="30dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="4dp"
                                android:src="@drawable/gallery_icon"
                                android:tint="@color/colorAccent" />
                        </com.balysv.materialripple.MaterialRippleLayout>

                        <!-- Video -->
                        <com.balysv.materialripple.MaterialRippleLayout
                            android:id="@+id/videoMRL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:minHeight="40dp"
                            android:minWidth="40dp"
                            app:mrl_rippleOverlay="true"
                            app:mrl_rippleRoundedCorners="30dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="4dp"
                                android:src="@drawable/video_icon"
                                android:tint="@color/colorAccent" />
                        </com.balysv.materialripple.MaterialRippleLayout>

                        <!-- Audio -->
                        <com.balysv.materialripple.MaterialRippleLayout
                            android:id="@+id/audioMRL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:minHeight="40dp"
                            android:minWidth="40dp"
                            android:visibility="gone"
                            app:mrl_rippleOverlay="true"
                            app:mrl_rippleRoundedCorners="30dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="4dp"
                                android:src="@drawable/audio_icon"
                                android:tint="@color/colorAccent" />
                        </com.balysv.materialripple.MaterialRippleLayout>

                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:id="@+id/expandMRL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="2dp"
                        android:visibility="gone"
                        app:mrl_rippleOverlay="true"
                        app:mrl_rippleRoundedCorners="30dp">

                        <com.github.zagum.expandicon.ExpandIconView
                            android:id="@+id/expandIconView"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center" />
                    </com.balysv.materialripple.MaterialRippleLayout>

                    <!-- Camera -->
                    <com.balysv.materialripple.MaterialRippleLayout
                        android:id="@+id/cameraMRL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:minHeight="45dp"
                        android:minWidth="45dp"
                        android:visibility="visible"
                        app:mrl_rippleOverlay="true"
                        app:mrl_rippleRoundedCorners="30dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:src="@drawable/camera_icon"
                            android:tint="@color/colorAccent" />
                    </com.balysv.materialripple.MaterialRippleLayout>

                    <EditText
                        android:id="@+id/messageET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/et_bg"
                        android:hint="Say something..."
                        android:minHeight="45dp"
                        android:paddingBottom="4dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:paddingTop="4dp"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:id="@+id/micMRL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:minHeight="40dp"
                        android:minWidth="40dp"
                        app:mrl_rippleOverlay="true"
                        app:mrl_rippleRoundedCorners="30dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/mic_icon"
                            android:tint="@android:color/black" />
                    </com.balysv.materialripple.MaterialRippleLayout>

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:id="@+id/sendMRL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"

                        android:layout_marginTop="2dp"
                        app:mrl_rippleOverlay="true"
                        app:mrl_rippleRoundedCorners="30dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/send_icon"
                            android:tint="@color/colorAccent" />
                    </com.balysv.materialripple.MaterialRippleLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>