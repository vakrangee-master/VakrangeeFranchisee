<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutParent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <!-- CheckList Name -->
                <LinearLayout
                    android:id="@+id/layoutQuestionName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="7dp"
                    android:background="@drawable/token_grey_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtQuestionNo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:text="1."
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txtQuestionName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:gravity="left|center"
                        android:paddingLeft="3dp"
                        android:paddingRight="4dp"
                        android:text="Whats is your Name ? "
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/grey"
                    android:visibility="gone" />

                <!-- Options/Image -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!-- Options  -->
                    <LinearLayout
                        android:id="@+id/layoutTextBoxAnswer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <!-- Spinner -->
                        <LinearLayout
                            android:id="@+id/layoutSpinnerOptions"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left"
                            android:visibility="visible"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:weightSum="1">

                            <TextView
                                style="@style/bca_form_header"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="0.3"
                                android:fontFamily="sans-serif-condensed"
                                android:gravity="left"
                                android:text="Choose"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:typeface="sans" />

                            <Spinner
                                android:id="@+id/spinnerOptions"
                                android:layout_width="0dp"
                                android:layout_height="32dp"
                                android:layout_gravity="left|center"
                                android:layout_weight="0.6"
                                android:background="@drawable/gradient_white_spinner"
                                android:dropDownWidth="match_parent"
                                android:fontFamily="sans-serif-condensed"
                                android:gravity="center"
                                android:spinnerMode="dropdown"
                                android:textColor="@color/headline_lbl"
                                android:textSize="12sp"
                                android:textStyle="normal" />

                        </LinearLayout>

                        <!-- Check box -->
                        <LinearLayout
                            android:id="@+id/layoutCheckBoxes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"></LinearLayout>

                        <!-- Radio Group -->
                        <RadioGroup
                            android:id="@+id/radioGroupOptions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                        <!-- EditText -->
                        <EditText
                            android:id="@+id/editTextAnswer"
                            style="@style/bca_form_normal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/edittext_bottom_bg"
                            android:gravity="top|center_vertical"
                            android:hint="Type your answer here"
                            android:inputType="textMultiLine"
                            android:lines="1"
                            android:maxLength="500"
                            android:paddingLeft="10dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="4dp"
                            android:textColor="#2d2d2d"
                            android:textColorHint="@color/colorGreyL6"></EditText>

                    </LinearLayout>

                    <!--  Proof Photo -->
                    <LinearLayout
                        android:id="@+id/layoutProofPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="left"
                            android:paddingRight="3dp"
                            android:text="Proof Photo"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:typeface="sans" />

                        <ImageView
                            android:id="@+id/imgProofImage"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:src="@drawable/ic_camera_alt_black_72dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
