<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/MyDrawerArrowToggle" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            app:cardElevation="2dp"
            app:contentPadding="5dp">

            <ScrollView
                android:id="@+id/ScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadeScrollbars="false"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scrollbarSize="2dp"
                android:scrollbarThumbVertical="@color/colorPrimary"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_stroke"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layoutParent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/layoutDetail1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- ATM ID -->
                            <LinearLayout
                                android:id="@+id/layoutATMID"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:gravity="left"
                                android:orientation="vertical"
                                android:weightSum="1">

                                <TextView
                                    android:id="@+id/txtATMIDLbl"
                                    style="@style/bca_form_header"
                                    android:layout_weight="0.6"
                                    android:text="ATM ID" />

                                <Spinner
                                    android:id="@+id/spinnerATMID"
                                    android:layout_width="match_parent"
                                    android:layout_height="38dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:background="@drawable/gradient_white_spinner"
                                    android:dropDownWidth="match_parent"
                                    android:gravity="center"
                                    android:spinnerMode="dropdown"
                                    android:textColor="@color/headline_lbl"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />

                            </LinearLayout>

                            <!-- Cash Withdrawal Date -->
                            <LinearLayout
                                android:id="@+id/layoutCashSourcingDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:gravity="left"
                                android:orientation="vertical"
                                android:weightSum="1">

                                <TextView
                                    android:id="@+id/txtCashSourcingDateLbl"
                                    style="@style/bca_form_header"
                                    android:layout_weight="0.6"
                                    android:text="Cash Withdrawal Date" />

                                <TextView
                                    android:id="@+id/textViewCashSourcingDate"
                                    style="@style/bca_form_normal"
                                    android:layout_width="match_parent"
                                    android:layout_height="36dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:background="@drawable/edittext_bottom_bg"
                                    android:drawableRight="@drawable/ic_date_range_black_24dp"
                                    android:gravity="center" />

                            </LinearLayout>

                            <!-- Bank Reference Number -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:gravity="left"
                                android:orientation="vertical"
                                android:visibility="gone"
                                android:weightSum="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/txtBankReferenceNumberLbl"
                                            style="@style/bca_form_header"
                                            android:layout_weight="0.6"
                                            android:text="Bank Reference Number" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="2dp"
                                        android:layout_marginRight="5dp"
                                        android:orientation="vertical">

                                        <EditText
                                            android:id="@+id/editTextBankReferenceNumber"
                                            style="@style/bca_form_normal"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="left"
                                            android:layout_marginLeft="5dp"
                                            android:layout_weight="1"
                                            android:background="@drawable/edittext_bottom_bg"
                                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
                                            android:gravity="top"
                                            android:hint="Bank Reference Number"
                                            android:inputType="textCapCharacters"
                                            android:maxLength="22"
                                            android:padding="10dp"
                                            android:singleLine="true" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Document Proof Copy  -->
                        <LinearLayout
                            android:id="@+id/layoutDocumentProof"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="left"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.4"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txtDocumentProofLbl"
                                        style="@style/bca_form_header"
                                        android:text="Cash Withdrawal Proof (Bank Statement/ Passbook Copy) " />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:gravity="left"
                                        android:text="JPG/PDF File Size less than 1 MB"
                                        android:textColor="@color/colorGreyL6"
                                        android:textSize="12sp"
                                        android:textStyle="normal" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:orientation="vertical"
                                        android:padding="5dp">

                                        <ImageView
                                            android:id="@+id/imgDocumentProof"
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:src="@drawable/ic_camera_alt_black_72dp" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutDetail2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Denomination -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtDenominationbl"
                                    style="@style/bca_form_header"
                                    android:text="Denomination " />

                                <!-- Denomination Box-->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_stroke"
                                    android:orientation="vertical">

                                    <!--layout header -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@color/colorLightPrimary_old"
                                        android:orientation="horizontal"
                                        android:padding="5dp"
                                        android:weightSum="3">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:fontFamily="sans-serif-condensed"
                                            android:gravity="center"
                                            android:text="Denomination"
                                            android:textColor="@color/white"
                                            android:textSize="14sp" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:fontFamily="sans-serif-condensed"
                                            android:gravity="center"
                                            android:text="Note Count"
                                            android:textColor="@color/white"
                                            android:textSize="14sp" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:fontFamily="sans-serif-condensed"
                                            android:gravity="center"
                                            android:text="Amount"
                                            android:textColor="@color/white"
                                            android:textSize="14sp" />

                                    </LinearLayout>

                                    <!--layout cassette 1-->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:orientation="horizontal"
                                        android:padding="5dp"
                                        android:weightSum="3">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight="1"
                                            android:fontFamily="sans-serif-condensed"
                                            android:gravity="center"
                                            android:text="2000 ₹"
                                            android:textColor="@color/headline_lbl"
                                            android:textSize="@dimen/atm_text_size" />

                                        <EditText
                                            android:id="@+id/edittextPurgeC1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:background="@drawable/edittext_bottom_bg"
                                            android:gravity="center"
                                            android:hint="0"
                                            android:inputType="number"
                                            android:maxLength="3"
                                            android:padding="5dp"
                                            android:singleLine="true"
                                            android:textColor="@color/headline_lbl"
                                            android:textColorHint="#cccccc"
                                            android:textSize="@dimen/atm_text_size" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight="1"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/textPurgeC1"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:layout_weight="1"
                                                android:fontFamily="sans-serif-condensed"
                                                android:gravity="center|right"
                                                android:text="0"
                                                android:textColor="@color/headline_lbl"
                                                android:textSize="@dimen/atm_text_size" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="1dp"
                                                android:layout_marginRight="3dp"
                                                android:text=" ₹"
                                                android:textColor="@color/headline_lbl"
                                                android:textSize="@dimen/atm_text_size" />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@color/grey" />

                                    <!--layout cassette 2-->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:orientation="horizontal"
                                        android:padding="5dp"
                                        android:weightSum="3">


                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight="1"
                                            android:fontFamily="sans-serif-condensed"
                                            android:gravity="center"
                                            android:text="500 ₹"
                                            android:textColor="@color/headline_lbl"
                                            android:textSize="@dimen/atm_text_size" />

                                        <EditText
                                            android:id="@+id/edittextPurgeC2"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:background="@drawable/edittext_bottom_bg"
                                            android:gravity="center"
                                            android:hint="0"
                                            android:inputType="number"
                                            android:maxLength="4"
                                            android:padding="5dp"
                                            android:singleLine="true"
                                            android:textColor="@color/headline_lbl"
                                            android:textColorHint="#cccccc"
                                            android:textSize="@dimen/atm_text_size" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight="1"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/textPurgeC2"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:layout_weight="1"
                                                android:fontFamily="sans-serif-condensed"
                                                android:gravity="center|right"
                                                android:text="0"
                                                android:textColor="@color/headline_lbl"
                                                android:textSize="@dimen/atm_text_size" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="1dp"
                                                android:layout_marginRight="3dp"
                                                android:text=" ₹"
                                                android:textColor="@color/headline_lbl"
                                                android:textSize="@dimen/atm_text_size" />

                                        </LinearLayout>
                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@color/grey" />

                                    <!--layout cassette 3-->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:orientation="horizontal"
                                        android:padding="5dp"
                                        android:weightSum="3">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight="1"
                                            android:fontFamily="sans-serif-condensed"
                                            android:gravity="center"
                                            android:text="100 ₹"
                                            android:textColor="@color/headline_lbl"
                                            android:textSize="@dimen/atm_text_size" />

                                        <EditText
                                            android:id="@+id/edittextPurgeC3"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:background="@drawable/edittext_bottom_bg"
                                            android:gravity="center"
                                            android:hint="0"
                                            android:inputType="number"
                                            android:maxLength="4"
                                            android:padding="5dp"
                                            android:singleLine="true"
                                            android:textColor="@color/headline_lbl"
                                            android:textColorHint="#cccccc"
                                            android:textSize="@dimen/atm_text_size" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight="1"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/textPurgeC3"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center|right"
                                                android:layout_weight="1"
                                                android:fontFamily="sans-serif-condensed"
                                                android:gravity="center|right"
                                                android:text="0"
                                                android:textColor="@color/headline_lbl"
                                                android:textSize="@dimen/atm_text_size" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="1dp"
                                                android:layout_marginRight="3dp"
                                                android:text=" ₹"
                                                android:textColor="@color/headline_lbl"
                                                android:textSize="@dimen/atm_text_size" />

                                        </LinearLayout>
                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@color/grey" />

                                    <!--layout final total amount-->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:layout_marginBottom="4dp"
                                        android:orientation="horizontal"
                                        android:padding="5dp"
                                        android:weightSum="3">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:fontFamily="sans-serif-condensed"
                                            android:gravity="center"
                                            android:text="Total"
                                            android:textAllCaps="true"
                                            android:textColor="@color/headline_lbl"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/textTotalNoteCountPurge"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:fontFamily="sans-serif-condensed"
                                            android:gravity="center"
                                            android:text="0"
                                            android:textAllCaps="true"
                                            android:textColor="@color/headline_lbl"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight="1"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/textTotalAmountCountPurge"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:fontFamily="sans-serif-condensed"
                                                android:gravity="center|right"
                                                android:text="0"
                                                android:textAllCaps="true"
                                                android:textColor="@color/headline_lbl"
                                                android:textSize="16sp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="1dp"
                                                android:layout_marginRight="3dp"
                                                android:text=" ₹"
                                                android:textColor="@color/headline_lbl"
                                                android:textSize="@dimen/atm_text_size" />
                                        </LinearLayout>
                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <!-- Status -->
                            <LinearLayout
                                android:id="@+id/layoutStatus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:gravity="left"
                                android:orientation="vertical"
                                android:visibility="gone"
                                android:weightSum="1">

                                <TextView
                                    android:id="@+id/txtStatusLbl"
                                    style="@style/bca_form_header"
                                    android:layout_weight="0.6"
                                    android:text="Status" />

                                <Spinner
                                    android:id="@+id/spinnerStatus"
                                    android:layout_width="match_parent"
                                    android:layout_height="38dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:background="@drawable/gradient_white_spinner"
                                    android:dropDownWidth="match_parent"
                                    android:gravity="center"
                                    android:spinnerMode="dropdown"
                                    android:textColor="@color/headline_lbl"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Footer -->
                    <LinearLayout
                        android:id="@+id/layoutFooter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCancel"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:text="@string/cancel"
                            android:textAllCaps="false"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textStyle="bold"
                            android:theme="@style/MatButtonCancel" />

                        <!-- Submit -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSubmit"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:text="Submit"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:theme="@style/MatButtonOld" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>