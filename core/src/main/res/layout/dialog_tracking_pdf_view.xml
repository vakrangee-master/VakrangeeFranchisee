<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--layout parent-->
    <LinearLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGreyL2"
        android:orientation="vertical">
        <!--layout header -->
        <LinearLayout
            android:id="@+id/layoutTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#13365C"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="left"
                android:singleLine="true"
                android:text="POD Photo"
                android:textColor="@color/md_white_1000"
                android:textSize="18sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btnClose"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/transparent"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>
        <!--layout GIF image-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:cardElevation="1dp"
            app:contentPadding="5dp">

            <LinearLayout
                android:id="@+id/includeLayoutProgresstxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:visibility="visible">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="67dp"
                    android:layout_height="58dp"
                    android:layout_gravity="center"
                    android:indeterminateDrawable="@drawable/progress_primary"
                    android:indeterminateDuration="1500" />

                <TextView
                    android:id="@+id/include_txtPleaseWait"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:padding="10dp"
                    android:text="@string/please_wait"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />
            </LinearLayout>

            <in.vakrangee.core.commongui.imagepreview.ImageZoom
                android:id="@+id/imageViewPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:visibility="gone" />

            <WebView
                android:id="@+id/webViewPDF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:visibility="gone" />

        </androidx.cardview.widget.CardView>
        <!-- layout footer -->

    </LinearLayout>

</LinearLayout>