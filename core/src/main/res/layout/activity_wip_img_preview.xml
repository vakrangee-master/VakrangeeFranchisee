<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Title -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarReadiness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                app:popupTheme="@style/MyDrawerArrowToggle" />
        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:id="@+id/parentSMLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <fragment
                android:id="@+id/fragmentImagePreview"
                android:name="in.vakrangee.supercore.franchisee.commongui.carouselgallery.ImageCarouselGalleryFragment"
                class="in.vakrangee.supercore.franchisee.commongui.carouselgallery.ImageCarouselGalleryFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tag="fragmentImagePreview" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

