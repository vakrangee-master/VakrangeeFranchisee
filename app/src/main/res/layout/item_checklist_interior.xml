<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        app:cardElevation="1dp"
        app:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/row_background"
            android:orientation="vertical">

            <!-- Element Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtElementName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:text="@string/lbl_element_name"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtSubElementName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:text="@string/lbl_element_name"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#999999" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Element Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.70"
                    android:orientation="vertical">

                    <!-- Size -->
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.10"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:layout_weight="0.35"
                            android:gravity="left|center"
                            android:paddingLeft="10dp"
                            android:text="@string/lbl_size"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#999999" />

                        <TextView
                            android:id="@+id/txtElementSize"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.65"
                            android:gravity="left|center"
                            android:paddingLeft="10dp"
                            android:text="1024 X 732"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />

                    </TableRow>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="gone"
                        android:background="#999999" />

                    <!-- Quantity -->
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.10"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="7dp"
                            android:layout_weight="0.35"
                            android:gravity="left|center"
                            android:paddingLeft="10dp"
                            android:text="@string/lbl_qty"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="1dp"
                            android:layout_marginLeft="1dp"
                            android:layout_height="match_parent"
                            android:background="#999999" />

                        <EditText
                            android:id="@+id/editTextElementQty"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="0.55"
                            android:layout_gravity="center"
                            android:background="@drawable/edittext_bottom_bg"
                            android:gravity="top"
                            android:hint="@string/hintEnterQuantity"
                            android:inputType="number"
                            android:lines="1"
                            android:maxLength="3"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:singleLine="true"
                            android:textColor="@color/gray"
                            android:textColorHint="#cccccc"></EditText>


                    </TableRow>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#999999" />

                    <!-- Status -->
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.10"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:layout_weight="0.35"
                            android:gravity="left|center"
                            android:paddingLeft="10dp"
                            android:text="@string/status"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#999999" />

                        <RadioGroup
                            android:id="@+id/radioGroupStatus"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.65"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <RadioButton
                                android:id="@+id/radioButtonElementYes"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="0.50"
                                android:checked="true"
                                android:text="@string/ok_txt"
                                android:textColor="@color/gray"
                                android:textSize="12sp" />

                            <RadioButton
                                android:id="@+id/radioButtonElementNo"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="0.50"
                                android:checked="false"
                                android:text="@string/not_ok_txt"
                                android:textColor="@color/gray"
                                android:textSize="12sp" />
                        </RadioGroup>

                    </TableRow>

                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#999999" />

                <!-- Element Image -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_margin="5dp"
                    android:layout_weight="0.30"
                    android:gravity="top"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgElementImage"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/ic_camera_alt_black_72dp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#999999" />

            <!-- Remarks -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.21"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:text="@string/lblRemarks"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_height="match_parent"
                    android:background="#999999" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.65">

                    <EditText
                        android:id="@+id/editTextRemarks"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/edittext_bottom_bg"
                        android:gravity="top"
                        android:hint="@string/hintRemarks"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:maxLength="200"
                        android:padding="5dp"
                        android:textColor="#2d2d2d"
                        android:textColorHint="#cccccc"
                        android:textSize="14sp"></EditText>
                </LinearLayout>

            </TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#999999" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>