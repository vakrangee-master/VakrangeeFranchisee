<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarGWR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/MyDrawerArrowToggle" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Body -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/fapScrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="false"
            android:scrollbarSize="2dp"
            android:scrollbarThumbVertical="@color/colorLightPrimary"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Witness Fragment-->
                <LinearLayout
                    android:id="@+id/layoutParentWitness"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:orientation="vertical">

                    <fragment
                        android:id="@+id/fragmentWitness"
                        android:name="in.vakrangee.franchisee.gwr.gwrwitness_camera.GWRWitnessFragment"
                        class="in.vakrangee.franchisee.gwr.gwrwitness_camera.GWRWitnessFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:tag="fragmentWitness" />

                </LinearLayout>

                <!--  Camera Fragment -->
                <LinearLayout
                    android:id="@+id/layoutParentCamera"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <fragment
                        android:id="@+id/fragmentCamera"
                        android:name="in.vakrangee.franchisee.gwr.gwrwitness_camera.GWRCameraManFragment"
                        class="in.vakrangee.franchisee.gwr.gwrwitness_camera.GWRCameraManFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:tag="fragmentCamera" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/grey"
        android:gravity="bottom|center"
        android:orientation="horizontal"
        android:padding="7dp">


        <TextView
            android:id="@+id/btnSubmitWitness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/buttonroundedsubmit"
            android:gravity="center"
            android:minHeight="42dp"
            android:paddingBottom="5dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="5dp"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>


