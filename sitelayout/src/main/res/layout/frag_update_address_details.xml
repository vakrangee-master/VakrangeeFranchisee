<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        app:cardElevation="2dp"
        app:contentPadding="5dp">

        <ScrollView
            android:id="@+id/ScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="false"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollbarSize="2dp"
            android:scrollbarThumbVertical="@color/colorPrimary"
            android:scrollbars="vertical">

            <!-- Address Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_stroke"
                android:orientation="vertical">

                <!-- Address Details Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorLightPrimary"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="left"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Kendra Address Details"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layoutAddressDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Premise Ownership Type -->
                        <LinearLayout
                            android:id="@+id/layoutPremiseOwnerShipType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:gravity="left"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/txtPremiseOwnerShipTypeLbl"
                                style="@style/bca_form_header"
                                android:layout_weight="0.6"
                                android:text="Premise Ownership Type" />

                            <Spinner
                                android:id="@+id/spinnerPremiseOwnerShipType"
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/gradient_spinner"
                                android:dropDownWidth="match_parent"
                                android:gravity="center"
                                android:spinnerMode="dropdown"
                                android:textColor="@color/gray"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <!-- Owned By -->
                        <LinearLayout
                            android:id="@+id/layoutOwnedBy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="left"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/txtOwnedByLbl"
                                style="@style/bca_form_header"
                                android:layout_weight="0.6"
                                android:text="Owned By" />

                            <Spinner
                                android:id="@+id/spinnerOwnedBy"
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/gradient_spinner"
                                android:dropDownWidth="match_parent"
                                android:gravity="center"
                                android:spinnerMode="dropdown"
                                android:textColor="@color/gray"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <!-- Rent Agreement -->
                        <LinearLayout
                            android:id="@+id/layoutRentAgreement"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="left"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txtRentAgreementChooseFile"
                                        style="@style/bca_form_header"
                                        android:text="Ownership Proof" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:gravity="left"
                                        android:text="JPG/PDF File Size less than 1 MB"
                                        android:textSize="12sp"
                                        android:textStyle="normal" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:orientation="vertical"
                                        android:padding="5dp">

                                        <ImageView
                                            android:id="@+id/imgRentAgreement"
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:src="@drawable/ic_camera_alt_black_72dp" />

                                        <TextView
                                            android:id="@+id/txtRentAgreementName"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="Image.jpeg"
                                            android:textSize="12sp"
                                            android:textStyle="normal"
                                            android:visibility="gone" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Landlord/Society NOC -->
                        <LinearLayout
                            android:id="@+id/layoutLandlordSocietyNOC"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="left"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txtLandlordSocietyNOCChooseFile"
                                        style="@style/bca_form_header"
                                        android:text="Landlord/Society NOC" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:gravity="left"
                                        android:text="JPG/PDF File Size less than 1 MB"
                                        android:textSize="12sp"
                                        android:textStyle="normal" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:orientation="vertical"
                                        android:padding="5dp">

                                        <ImageView
                                            android:id="@+id/imgLandlordSocietyNOC"
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:src="@drawable/ic_camera_alt_black_72dp" />

                                        <TextView
                                            android:id="@+id/txtLandlordSocietyNOCName"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="Image.jpeg"
                                            android:textSize="12sp"
                                            android:textStyle="normal"
                                            android:visibility="gone" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Address Line 1 -->
                        <LinearLayout
                            android:id="@+id/layoutPermanentAddressLine1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:gravity="left"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txtPermanentAddressLine1Lbl"
                                        style="@style/bca_form_header"
                                        android:layout_weight="0.6"
                                        android:text="Address" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="5dp"
                                    android:orientation="vertical">

                                    <EditText
                                        android:id="@+id/editTextPermanentAddressLine1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/edittext_bottom_bg"
                                        android:gravity="top"
                                        android:hint="Address Line 1"
                                        android:inputType="textMultiLine|textCapWords"
                                        android:lines="3"
                                        android:maxLength="35"
                                        android:paddingLeft="10dp"
                                        android:paddingTop="3dp"
                                        android:textColor="@color/gray"
                                        android:textSize="12sp"
                                        android:textStyle="normal" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginTop="3dp"
                                        android:gravity="left"
                                        android:text="Maximum of 35 characters allowed."
                                        android:textColor="@color/gray"
                                        android:textSize="12sp"
                                        android:textStyle="normal" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Address Line 2 -->
                        <LinearLayout
                            android:id="@+id/layoutPermanentAddressLine2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:gravity="left"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txtPermanentAddressLine2Lbl"
                                        style="@style/bca_form_header"
                                        android:layout_weight="0.6"
                                        android:text="Address Line 2"
                                        android:visibility="gone" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="5dp"
                                    android:orientation="vertical">

                                    <EditText
                                        android:id="@+id/editTextPermanentAddressLine2"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/edittext_bottom_bg"
                                        android:gravity="top"
                                        android:hint="Address Line 2"
                                        android:inputType="textMultiLine|textCapWords"
                                        android:lines="3"
                                        android:maxLength="35"
                                        android:paddingLeft="10dp"
                                        android:paddingTop="3dp"
                                        android:textColor="@color/gray"
                                        android:textSize="12sp"
                                        android:textStyle="normal" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginTop="3dp"
                                        android:gravity="left"
                                        android:text="Maximum of 35 characters allowed."
                                        android:textColor="@color/gray"
                                        android:textSize="12sp"
                                        android:textStyle="normal" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Landmark -->
                        <LinearLayout
                            android:id="@+id/layoutPermanentLandmark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:gravity="left"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txtPermanentLandmarkLbl"
                                        style="@style/bca_form_header"
                                        android:layout_weight="0.6"
                                        android:text="Landmark"
                                        android:visibility="gone" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:background="@drawable/edittext_bottom_bg"
                                        android:orientation="horizontal"
                                        android:padding="1dp">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:background="@color/grey"
                                            android:gravity="center"
                                            android:padding="5dp"
                                            android:src="@drawable/ic_location_on_black_24dp" />

                                        <EditText
                                            android:id="@+id/editTextPermanentLandmark"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="left"
                                            android:layout_weight="1"
                                            android:background="@android:color/transparent"
                                            android:gravity="top"
                                            android:hint="Landmark"
                                            android:inputType="text|textCapWords"
                                            android:maxLength="35"
                                            android:padding="10dp"
                                            android:paddingLeft="10dp"
                                            android:paddingTop="3dp"
                                            android:singleLine="true"
                                            android:textColor="@color/gray"
                                            android:textSize="12sp"
                                            android:textStyle="normal" />
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginTop="3dp"
                                        android:gravity="left"
                                        android:text="Maximum of 35 characters allowed."
                                        android:textColor="@color/gray"
                                        android:textSize="12sp"
                                        android:textStyle="normal" />

                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>

                        <!-- Kendra Location Address Proof (Electricity /BSNL / MTNL etc. Bill)  -->
                        <LinearLayout
                            android:id="@+id/layoutKendraLocAddressProof"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="left"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txtKendraLocAddressProofChooseFile"
                                        style="@style/bca_form_header"
                                        android:text="Kendra Location Address Proof (Electricity /BSNL / MTNL etc. Bill) " />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:gravity="left"
                                        android:text="JPG/PDF File Size less than 1 MB"
                                        android:textSize="12sp"
                                        android:textStyle="normal" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:orientation="vertical"
                                        android:padding="5dp">

                                        <ImageView
                                            android:id="@+id/imgKendraLocAddressProof"
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:src="@drawable/ic_camera_alt_black_72dp" />

                                        <TextView
                                            android:id="@+id/txtKendraLocAddressProofName"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="Image.jpeg"
                                            android:textSize="12sp"
                                            android:textStyle="normal"
                                            android:visibility="gone" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutAddressStateDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Pin code -->
                        <LinearLayout
                            android:id="@+id/layoutPermanentPincode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:gravity="left"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txtPermanentPincodeLbl"
                                        style="@style/bca_form_header"
                                        android:layout_weight="0.6"
                                        android:text="Pincode" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:background="@drawable/edittext_bottom_bg"
                                        android:orientation="horizontal"
                                        android:padding="1dp">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:background="@color/grey"
                                            android:gravity="center"
                                            android:padding="5dp"
                                            android:src="@drawable/ic_location_on_black_24dp" />

                                        <EditText
                                            android:id="@+id/editTextPermanentPincode"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="left"
                                            android:layout_weight="1"
                                            android:background="@android:color/transparent"
                                            android:gravity="top"
                                            android:hint="Pincode"
                                            android:inputType="number"
                                            android:maxLength="6"
                                            android:padding="10dp"
                                            android:paddingLeft="10dp"
                                            android:paddingTop="3dp"
                                            android:singleLine="true"
                                            android:textColor="@color/gray"
                                            android:textSize="12sp"
                                            android:textStyle="normal" />
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginTop="3dp"
                                        android:gravity="left"
                                        android:text="Maximum of 35 characters allowed."
                                        android:textColor="@color/gray"
                                        android:textSize="12sp"
                                        android:textStyle="normal" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <!-- State -->
                        <LinearLayout
                            android:id="@+id/layoutState"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:gravity="left"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/txtStateLbl"
                                style="@style/bca_form_header"
                                android:layout_weight="0.6"
                                android:text="State" />

                            <in.vakrangee.supercore.franchisee.utils.CustomSearchableSpinner
                                android:id="@+id/spinnerState"
                                style="@style/bca_form_normal"
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/gradient_white_spinner"
                                android:dropDownWidth="match_parent"
                                android:gravity="center"
                                android:spinnerMode="dropdown" />

                        </LinearLayout>

                        <!-- District -->
                        <LinearLayout
                            android:id="@+id/layoutPermanentDistrict"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:gravity="left"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/txtPermanentDistrictLbl"
                                style="@style/bca_form_header"
                                android:layout_weight="0.6"
                                android:text="District" />

                            <in.vakrangee.supercore.franchisee.utils.CustomSearchableSpinner
                                android:id="@+id/spinnerPermanentDistrict"
                                style="@style/bca_form_normal"
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/gradient_white_spinner"
                                android:dropDownWidth="match_parent"
                                android:gravity="center"
                                android:spinnerMode="dropdown" />

                        </LinearLayout>

                        <!-- Village/Town/City -->
                        <LinearLayout
                            android:id="@+id/layoutPermanentVTC"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:gravity="left"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/txtPermanentVTCLbl"
                                style="@style/bca_form_header"
                                android:layout_weight="0.6"
                                android:text="Village/Town/City" />

                            <in.vakrangee.supercore.franchisee.utils.CustomSearchableSpinner
                                android:id="@+id/spinnerPermanentVTC"
                                style="@style/bca_form_normal"
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/gradient_white_spinner"
                                android:dropDownWidth="match_parent"
                                android:gravity="center"
                                android:spinnerMode="dropdown" />

                        </LinearLayout>

                        <!-- Municipal Corporation -->
                        <LinearLayout
                            android:id="@+id/layoutMunicipalCorporation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:gravity="left"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/txtMunicipalCorporationLbl"
                                style="@style/bca_form_header"
                                android:layout_weight="0.6"
                                android:text="Municipal Corporation " />

                            <in.vakrangee.supercore.franchisee.utils.CustomSearchableSpinner
                                android:id="@+id/spinnerMunicipalCorporation"
                                style="@style/bca_form_normal"
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/gradient_white_spinner"
                                android:dropDownWidth="match_parent"
                                android:gravity="center"
                                android:spinnerMode="dropdown" />

                        </LinearLayout>

                        <!-- Ward No -->
                        <LinearLayout
                            android:id="@+id/layoutWardNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:gravity="left"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/txtWardNoLbl"
                                style="@style/bca_form_header"
                                android:layout_weight="0.6"
                                android:text="Ward No." />

                            <in.vakrangee.supercore.franchisee.utils.CustomSearchableSpinner
                                android:id="@+id/spinnerWardNo"
                                style="@style/bca_form_normal"
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/gradient_white_spinner"
                                android:dropDownWidth="match_parent"
                                android:gravity="center"
                                android:spinnerMode="dropdown" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- Footer -->
                <LinearLayout
                    android:id="@+id/layoutFooter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCancel"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:text="@string/cancel"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textStyle="bold"
                        android:theme="@style/MatButtonCancel" />

                    <!-- Submit -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSubmit"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:text="Submit"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:theme="@style/MatButtonOld" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</LinearLayout>