<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/SIL"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardElevation="1dp"
        app:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <!-- Basic Info Layout -->
                <RelativeLayout
                    android:id="@+id/realtivelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center">

                    <!-- Location Details -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:background="@color/white"
                        android:gravity="left"
                        android:orientation="vertical">

                        <!-- Status -->
                        <LinearLayout
                            android:id="@+id/layoutStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:orientation="horizontal"
                            android:padding="2dp"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.75"
                                android:text="Status "
                                android:textColor="@color/primary"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:typeface="sans"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/txtStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/token_background"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="Sanjay Nandwana"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Name -->
                        <LinearLayout
                            android:id="@+id/layoutName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:orientation="horizontal"
                            android:padding="2dp"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/txtNameLbl"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.45"
                                android:text="Name "
                                android:textColor="@color/primary"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:typeface="sans" />

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.55"
                                android:text="Sanjay Nandwana"
                                android:textColor="@color/gray"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <!-- Application Id -->
                        <LinearLayout
                            android:id="@+id/layoutApplicationId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:orientation="horizontal"
                            android:padding="2dp"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/txtApplicationIdLbl"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.45"
                                android:text="Application No "
                                android:textColor="@color/primary"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:typeface="sans" />

                            <TextView
                                android:id="@+id/txtApplicationId"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.55"
                                android:text="Sanjay Nandwana"
                                android:textColor="@color/gray"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <!-- Type -->
                        <TextView
                            android:id="@+id/type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/name"
                            android:padding="2dp"
                            android:visibility="gone" />

                    </LinearLayout>

                </RelativeLayout>

                <!-- Status Indicator -->
                <LinearLayout
                    android:id="@+id/layoutStatusIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <!-- Status -->
                        <LinearLayout
                            android:id="@+id/layoutFranhiseeStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="invisible">

                            <TextView
                                android:id="@+id/txtStatusIndicator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/status_circle"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:autoLink="phone"
                                android:drawablePadding="10dp"
                                android:drawableRight="@drawable/ic_call_black_24dp"
                                android:gravity="center"
                                android:text="Sanjay Nandwana"
                                android:textColor="@color/gray"
                                android:textSize="16sp"
                                android:visibility="gone" />

                        </LinearLayout>

                        <!-- Mobile No -->
                        <LinearLayout
                            android:id="@+id/layoutMobileNo"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:autoLink="phone"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtMobileIcon"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autoLink="phone"
                                android:gravity="center"
                                android:padding="2dp" />

                            <TextView
                                android:id="@+id/txtMobileNo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:autoLink="phone"
                                android:drawablePadding="10dp"
                                android:drawableRight="@drawable/ic_call_black_24dp"
                                android:gravity="center"
                                android:text="Sanjay Nandwana"
                                android:textColor="@color/gray"
                                android:textSize="16sp"
                                android:visibility="gone" />

                        </LinearLayout>

                        <!-- Email Id -->
                        <LinearLayout
                            android:id="@+id/layoutEmailId"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:autoLink="email"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autoLink="email"
                                android:gravity="center"
                                android:padding="2dp" />

                            <TextView
                                android:id="@+id/txtEmailId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:autoLink="email"
                                android:drawablePadding="10dp"
                                android:drawableRight="@drawable/mail"
                                android:text="Sanjay Nandwana"
                                android:textColor="@color/gray"
                                android:textSize="16sp"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>




